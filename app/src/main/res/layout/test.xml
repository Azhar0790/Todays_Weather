<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_12" >

    <RelativeLayout
        android:id="@+id/rLayout_Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#007090" >

        <EditText
            android:id="@+id/et_Search"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:hint="Enter the city Name.."
            android:imeOptions="actionSearch"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/search_x" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_divide"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rLayout_Search"
        android:layout_marginTop="5dp"
        android:background="@drawable/dividerx" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_horizontal"
        android:layout_below="@+id/iv_divide" >

        <RelativeLayout
            android:id="@+id/rel_middle"
            android:layout_width="match_parent"
            android:layout_height="250dp" >

            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#ff0000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_temp_c"
                android:layout_marginRight="10dp"
                android:text="weather"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/tv_city_name"
                android:layout_alignTop="@+id/tv_temp_c"
                android:layout_marginTop="42dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/tv_wind_dir"
                android:layout_alignTop="@+id/tv_wind_dir"
                android:layout_toLeftOf="@+id/tv_wind_dir"
                android:src="@drawable/winddirecton" />

            <TextView
                android:id="@+id/tv_wind_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_weather"
                android:layout_marginRight="10dp"
                android:text="wind_d"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:layout_alignBottom="@+id/tv_pressure_mb"
                android:layout_alignTop="@+id/tv_pressure_mb"
                android:layout_toLeftOf="@+id/tv_pressure_mb"
                android:src="@drawable/pressuremp" />

            <TextView
                android:id="@+id/tv_pressure_mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_wind_dir"
                android:layout_marginRight="10dp"
                android:text="wind_p"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/tv_wind_degrees"
                android:layout_alignTop="@+id/tv_wind_degrees"
                android:layout_toLeftOf="@+id/tv_wind_degrees"
                android:src="@drawable/winddegree" />

            <TextView
                android:id="@+id/tv_wind_degrees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_pressure_mb"
                android:layout_marginRight="10dp"
                android:text="wind_d"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/tv_wind_kph"
                android:layout_alignTop="@+id/tv_wind_kph"
                android:layout_toLeftOf="@+id/tv_wind_kph"
                android:src="@drawable/windkph" />

            <TextView
                android:id="@+id/tv_wind_kph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_wind_degrees"
                android:layout_marginRight="10dp"
                android:text="wind_k"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/tv_wind_mph"
                android:layout_alignTop="@+id/tv_wind_mph"
                android:layout_toLeftOf="@+id/tv_wind_mph"
                android:src="@drawable/windmph" />

            <TextView
                android:id="@+id/tv_wind_mph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_wind_kph"
                android:layout_marginRight="10dp"
                android:text="wind_d"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_temp_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tv_wind_degrees"
                android:layout_alignTop="@+id/tv_city_name"
                android:textColor="#ffffff"
                android:textSize="50sp" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rel_horizontal"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true" >

        <com.weather.horizontal.HorizontalListView
            android:id="@+id/customList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>